@model TravelTripProject.Models.Siniflar.Listele
@{
    ViewBag.Title = "AnaSayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE HTML>
<html>
<body>
    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Plan the Easy Trip</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/EasyTrip/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Aktiviteler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/EasyTrip/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Gezilecek Yerler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/EasyTrip/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yorumlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/EasyTrip/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Bloglar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider">
                            <ul class="rslides" id="slider1">
                                @foreach (var i in Model.BlogDeger)
                                {
                                    <li><img style="width:650px;height:650px;" src="~/@i.BlogResim" alt=""></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    @foreach (var i in Model.AnaDeger)
                    {
                        <h3>@i.Baslik</h3>
                        <p>@i.Aciklama</p>
                    }
                </div>
                <div class="grids">
                    <div class="box1">
                        <div class="padding">
                            <h4>Son Bloglar</h4>
                            @foreach (var i in Model.BlogDeger2)
                            {
                                <ul class="list list-pad">
                                    <li class="list-bg"><span>@i.ID</span><a href="~/Blog/BlogDetail/@i.ID">@i.Aciklama.Substring(0, 9)</a></li>
                                </ul>
                            }
                        </div>
                        <div class="padding1">
                            <h4>Tüm Bloglar</h4>
                            @foreach (var i in Model.BlogDeger)
                            {
                                <div class="box-left">
                                    <div class="bot-img">
                                        <img src="~/@i.BlogResim" alt="" />
                                    </div>
                                    <div class="bot-desc">
                                        <p>@i.Baslik</p>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            }
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


